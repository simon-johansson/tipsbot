{
  "name": "tipsbot",
  "version": "0.0.0-semantically-released",
  "description": "a Slack bot that gives you useful tips",
  "keywords": [
    "Slack",
    "bot",
    "tips",
    "Pragmatic Programmer",
    "clean code"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simon-johansson/tipsbot"
  },
  "bugs": {
    "url": "https://github.com/simon-johansson/tipsbot/issues"
  },
  "main": "lib/tipsbot.js",
  "bin": {
    "tipsbot": "bin/index.js"
  },
  "scripts": {
    "start": "node bin/index.js",
    "test": "./node_modules/.bin/mocha --compilers js:babel-register",
    "test:watch": "./node_modules/.bin/mocha --watch --compilers js:babel-register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "npm run test && git-cz"
  },
  "author": {
    "name": "Simon Johansson",
    "email": "mail@simon-johansson.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "async": "^1.4.1",
    "babel": "^6.5.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "cron-parser": "^1.1.0",
    "node-schedule": "^1.0.0",
    "prettycron": "^0.10.0",
    "slackbots": "^0.5.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.8",
    "chai": "^3.5.0",
    "commitizen": "^2.5.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^1.0.0",
    "ghooks": "^1.0.3",
    "mocha": "^2.4.5",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
